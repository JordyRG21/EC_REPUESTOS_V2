@model EC_Repuetos_v2.Models.EC_USUARIOS

@{
    ViewBag.Title = "Login";
    Layout = null;
}

@Styles.Render("~/Content/EstiloLogin.css")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("VerifyUser", "Login", new { @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        <div class="login-page">
                            <div class="form">
                                <form class="login-form">
                                    <img src="~/Imagenes/ecommerceLogo.png">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(email => email.EC_USUARIOS_EMAIL, new { @class = "input1", placeholder = "Ingrese su email", @name = "email" })
                                            @Html.ValidationMessageFor(email => email.EC_USUARIOS_EMAIL, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            @Html.PasswordFor(password => password.EC_USUARIOS_CONTRASENNA, new { @class = "input1", @placeholder = "Ingrese su contraseña", @name = "contrasenna" })
                                            @Html.ValidationMessageFor(password => password.EC_USUARIOS_CONTRASENNA, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Iniciar sesión" class="button" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Registrarse" class="button" />
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                }
            </section>
        </div>

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
